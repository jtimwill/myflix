%article.video_category
  %header
    %h3= link_to "#{@cat.first.name}", category_path(@cat.first)
  .videos.row
    - @cat.first.videos.each do |video|
      %video_format.video.col-sm-2
        = link_to video_path(video) do
          %img(src="#{video.small_cover_url}")

