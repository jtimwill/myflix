%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, class: "invite" do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            .row
              .col-sm-4
                = f.text_field :recipient_name
                = f.text_field :recipient_email
                = f.text_area :message, class: "span4", rows: 6, placeholder: "Please join this really cool site!"
                = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.form-group.action
          = f.submit "Send Invitation", class: "btn btn-default"